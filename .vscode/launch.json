//server推理
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Policy Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/serve_policy.py",
            "args": [
                "policy:checkpoint",
                "--policy.config=pi0_robotwin_low_mem_finetune",
                "--policy.dir=/home/ubuntu/workspace_clean/openpi/checkpoints/pi0_robotwin_low_mem_finetune/pi_robotwin_train/4"
            ],
            "console": "integratedTerminal",
            "pythonPath": "/home/ubuntu/workspace_clean/openpi/.venv/bin/python",
            "justMyCode": false,
            "env": {
                "CUDA_VISIBLE_DEVICES": "0,1"  // 指定 GPU 设备
            },
            "cwd": "${workspaceFolder}"  // 设置工作目录为项目根目录
        }
    ]
}


